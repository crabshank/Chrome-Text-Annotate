{
  "manifest_version": 3,
  "name": "Text Annotate",
  "version": "2024.7",
  "options_page":  "options.html",
  "content_scripts": [
    {
	      "all_frames": true,
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "permissions": [
	"tabs",
	"activeTab",
	"storage",
	"unlimitedStorage",
	"downloads"
  ],
  "action": {
    "default_icon": "textAnnotate.png",
    "default_popup": "index.html"
  },
  	"icons": {
        "128": "textAnnotate.png"
    },
	"web_accessible_resources": [{ 
  "resources": ["lz-string.js"],
  "matches": ["<all_urls>"]
}]
}
