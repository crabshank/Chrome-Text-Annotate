{
  "manifest_version": 3,
  "name": "Text Annotate",
  "version": "2025.1",
  "options_page":  "options.html",
  "content_scripts": [
    {
	      "all_frames": true,
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "permissions": [
	"tabs",
	"activeTab",
	"storage",
	"unlimitedStorage"
  ],
  "action": {
    "default_icon": "textAnnotate.png",
    "default_popup": "index.html"
  },
  	"icons": {
        "128": "textAnnotate.png"
    }
}
